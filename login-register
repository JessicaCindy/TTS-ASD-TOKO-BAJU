#include <stdio.h>
#include <string.h>
#include <windows.h>
#include <stdlib.h>
#include <time.h>

char penggunaTersimpan[50];
char sandiTersimpan[50];
int sudahTerdaftar = 0;

void loadingBar() {
    printf("\033]11;#FFC2CC\007");
    printf("\033[38;2;0;0;0m");
    char a = 177, b = 219;
    system("cls");
    printf("\n\n\n\n\n\n\n\n\n");
    printf("\t\t\t\t\t\t       mohon tunggu sebentar \n\n");
    printf("\t\t\t\t      ");
    for (int i = 0; i < 50; i++){
        printf("%c", b);
        Sleep(30);
    }
    printf("\n");
    system("cls");
}

void registrasiPengguna() {
    printf("\033]11;#FFC2CC\007");
    printf("\033[38;2;0;0;0m");
    system("cls");
    printf("\n");
    printf("==============================================\n");
    printf("              MENU REGISTRASI AKUN            \n");
    printf("==============================================\n");
    printf("  Masukkan username : ");
    scanf("%s", penggunaTersimpan);
    printf("  Masukkan password : ");
    scanf("%s", sandiTersimpan);
    sudahTerdaftar = 1;
    printf("  Akun berhasil didaftarkan. Silakan login.\n");
    printf("==============================================\n");
    getchar();
    getchar();
}

void menu();

int loginPengguna() {
    printf("\033]11;#FFC2CC\007");
    printf("\033[38;2;0;0;0m");
    char penggunaInput[50];
    char sandiInput[50];

    if (!sudahTerdaftar) {
        printf("\n");
        printf("==============================================\n");
        printf("     Anda belum memiliki akun. Silakan daftar\n");
        printf("==============================================\n");
        getchar();
        getchar();
        return 0;
    }

    system("cls");
    printf("\n");
    printf("==============================================\n");
    printf("                  MENU LOGIN                  \n");
    printf("==============================================\n");
    printf("  Username : ");
    scanf("%s", penggunaInput);
    printf("  Password : ");
    scanf("%s", sandiInput);

    if (strcmp(penggunaInput, penggunaTersimpan) == 0 &&
        strcmp(sandiInput, sandiTersimpan) == 0) {
        printf("  Login berhasil. Selamat datang, %s.\n", penggunaTersimpan);
        printf("==============================================\n");
        getchar();
        getchar();
        loadingBar();
        menu();
        return 1;
    } else {
        printf("  Username atau password salah.\n");
        printf("==============================================\n");
        return 0;
    }
}

int main() {
    int pilihan;
    int loginBerhasil = 0;

    do {
        system("cls");
        printf("\033]11;#FFC2CC\007");
        printf("\033[38;2;0;0;0m");
        printf("\n");
        printf("===========================================================\n");
        printf("             SELAMAT DATANG DI FTI SHOPPING CENTER         \n");
        printf("===========================================================\n");
        printf("  1. Registrasi\n");
        printf("  2. Login\n");
        printf("  3. Keluar\n");
        printf("-----------------------------------------------------------\n");
        printf("  Pilih menu  : ");
        scanf("%d", &pilihan);

        switch (pilihan) {
            case 1:
                registrasiPengguna();
                break;
            case 2:
                loginBerhasil = loginPengguna();
                break;
            case 3:
                printf("  Terima kasih telah menggunakan program ini.\n");
                printf("==============================================\n");
                break;
            default:
                printf("  Pilihan tidak valid. Silakan pilih 1-3.\n");
        }
    } while (pilihan != 3);
}
